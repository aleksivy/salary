			<dataSource>ИсточникДанных1</dataSource>
			<query>ВЫБРАТЬ
	Рег.Сотрудник,
	Рег.ВидРасчета КАК ВидНачисления,
	СУММА(Рег.Результат) КАК Сумма
ПОМЕСТИТЬ ЭтотМесяц
ИЗ
	РегистрРасчета.ОсновныеНачисленияРаботниковОрганизаций КАК Рег
ГДЕ
	Рег.ПериодДействия = НАЧАЛОПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ)
	И НЕ Рег.ВидРасчета = ЗНАЧЕНИЕ(ПланВидовРасчета.ОсновныеНачисленияОрганизаций.МедицинскаяСтраховка)
	И (Рег.Сотрудник.ДатаУвольнения = ДАТАВРЕМЯ(1, 1, 1)
			ИЛИ Рег.Сотрудник.ДатаУвольнения &gt; НАЧАЛОПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ))

СГРУППИРОВАТЬ ПО
	Рег.Сотрудник,
	Рег.ВидРасчета
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.Сотрудник,
	Рег.ВидРасчета КАК ВидНачисления,
	СУММА(Рег.Результат) КАК Сумма
ПОМЕСТИТЬ ПредыдущийМесяц
ИЗ
	РегистрРасчета.ОсновныеНачисленияРаботниковОрганизаций КАК Рег
ГДЕ
	Рег.ПериодДействия = НАЧАЛОПЕРИОДА(ДОБАВИТЬКДАТЕ(НАЧАЛОПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ), СЕКУНДА, -1), МЕСЯЦ)
	И НЕ Рег.ВидРасчета = ЗНАЧЕНИЕ(ПланВидовРасчета.ОсновныеНачисленияОрганизаций.МедицинскаяСтраховка)
	И (Рег.Сотрудник.ДатаУвольнения = ДАТАВРЕМЯ(1, 1, 1)
			ИЛИ Рег.Сотрудник.ДатаУвольнения &gt; НАЧАЛОПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ))

СГРУППИРОВАТЬ ПО
	Рег.Сотрудник,
	Рег.ВидРасчета
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	ЕСТЬNULL(ЭтотМесяц.Сотрудник, ПредыдущийМесяц.Сотрудник) КАК Сотрудник,
	ЕСТЬNULL(ЭтотМесяц.ВидНачисления, ПредыдущийМесяц.ВидНачисления) КАК ВидНачисления,
	СУММА(ЕСТЬNULL(ЭтотМесяц.Сумма, 0)) КАК СуммаЭтотМесяц,
	СУММА(ЕСТЬNULL(ПредыдущийМесяц.Сумма, 0)) КАК СуммаПредыдущийМесяц
ПОМЕСТИТЬ НачисленияВсе
ИЗ
	ЭтотМесяц КАК ЭтотМесяц
		ПОЛНОЕ СОЕДИНЕНИЕ ПредыдущийМесяц КАК ПредыдущийМесяц
		ПО ЭтотМесяц.Сотрудник = ПредыдущийМесяц.Сотрудник
			И ЭтотМесяц.ВидНачисления = ПредыдущийМесяц.ВидНачисления

СГРУППИРОВАТЬ ПО
	ЕСТЬNULL(ЭтотМесяц.Сотрудник, ПредыдущийМесяц.Сотрудник),
	ЕСТЬNULL(ЭтотМесяц.ВидНачисления, ПредыдущийМесяц.ВидНачисления)
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.Сотрудник,
	МАКСИМУМ(ВЫБОР
			КОГДА Рег.Валюта1 = ЗНАЧЕНИЕ(Справочник.Валюты.Гривна)
				ТОГДА Рег.Показатель1
			ИНАЧЕ ВЫБОР
					КОГДА Курсы.Курс = 0
						ТОГДА Рег.Показатель1
					ИНАЧЕ ВЫБОР
							КОГДА Курсы.Кратность = 0
									ИЛИ Курсы.Кратность = 1
								ТОГДА ВЫРАЗИТЬ(Рег.Показатель1 * Курсы.Курс КАК ЧИСЛО(12, 0))
							ИНАЧЕ ВЫРАЗИТЬ(Рег.Показатель1 * Курсы.Курс / Курсы.Кратность КАК ЧИСЛО(12, 0))
						КОНЕЦ
				КОНЕЦ
		КОНЕЦ) КАК Оклад
ПОМЕСТИТЬ Оклады
ИЗ
	РегистрСведений.ПлановыеНачисленияРаботниковОрганизаций.СрезПоследних(
			КОНЕЦПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ),
			ВидРасчета = ЗНАЧЕНИЕ(ПланВидовРасчета.ОсновныеНачисленияОрганизаций.ОкладПоДням)
				И Сотрудник В
					(ВЫБРАТЬ
						НачисленияВсе.Сотрудник
					ИЗ
						НачисленияВсе КАК НачисленияВсе)) КАК Рег,
	РегистрСведений.КурсыВалютДляРасчетовСПерсоналом.СрезПоследних(КОНЕЦПЕРИОДА(&amp;ДатаОтчета, МЕСЯЦ), Валюта = ЗНАЧЕНИЕ(Справочник.Валюты.Доллар)) КАК Курсы

СГРУППИРОВАТЬ ПО
	Рег.Сотрудник
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	НачисленияВсе.Сотрудник,
	ЕСТЬNULL(Оклады.Оклад, 0) КАК Оклад,
	СУММА(НачисленияВсе.СуммаПредыдущийМесяц) КАК СуммаПредыдущийМесяц,
	СУММА(НачисленияВсе.СуммаЭтотМесяц) КАК СуммаЭтотМесяц,
	100 * (СУММА(НачисленияВсе.СуммаЭтотМесяц) - СУММА(НачисленияВсе.СуммаПредыдущийМесяц)) / ВЫБОР
		КОГДА ЕСТЬNULL(Оклады.Оклад, 0) = 0
			ТОГДА ВЫБОР
					КОГДА СУММА(НачисленияВсе.СуммаПредыдущийМесяц) = 0
						ТОГДА ВЫБОР
								КОГДА СУММА(НачисленияВсе.СуммаЭтотМесяц) = 0
									ТОГДА 1
								ИНАЧЕ СУММА(НачисленияВсе.СуммаЭтотМесяц)
							КОНЕЦ
					ИНАЧЕ СУММА(НачисленияВсе.СуммаПредыдущийМесяц)
				КОНЕЦ
		ИНАЧЕ ЕСТЬNULL(Оклады.Оклад, 0)
	КОНЕЦ КАК РазницаПроцентов
ПОМЕСТИТЬ НачисленияСвернуто
ИЗ
	НачисленияВсе КАК НачисленияВсе
		ЛЕВОЕ СОЕДИНЕНИЕ Оклады КАК Оклады
		ПО НачисленияВсе.Сотрудник = Оклады.Сотрудник

СГРУППИРОВАТЬ ПО
	НачисленияВсе.Сотрудник,
	Оклады.Оклад,
	ЕСТЬNULL(Оклады.Оклад, 0)
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	НачисленияСвернуто.Сотрудник,
	НачисленияСвернуто.Сотрудник.ДатаПриемаНаРаботу КАК ДатаПриема,
	НачисленияСвернуто.Сотрудник.ДатаУвольнения КАК ДатаУвольнения,
	НачисленияСвернуто.Оклад,
	НачисленияСвернуто.СуммаПредыдущийМесяц КАК СуммаПредыдущийМесяцВсего,
	НачисленияСвернуто.СуммаЭтотМесяц КАК СуммаЭтотМесяцВсего,
	НачисленияСвернуто.РазницаПроцентов КАК РазницаВсего,
	НачисленияВсе.ВидНачисления,
	НачисленияВсе.СуммаПредыдущийМесяц КАК СуммаПредыдущийМесяц,
	НачисленияВсе.СуммаЭтотМесяц КАК СуммаЭтотМесяц,
	100 * (НачисленияВсе.СуммаЭтотМесяц - НачисленияВсе.СуммаПредыдущийМесяц) / ВЫБОР
		КОГДА НачисленияСвернуто.Оклад = 0
			ТОГДА ВЫБОР
					КОГДА НачисленияВсе.СуммаПредыдущийМесяц = 0
						ТОГДА ВЫБОР
								КОГДА НачисленияВсе.СуммаЭтотМесяц = 0
									ТОГДА 1
								ИНАЧЕ НачисленияВсе.СуммаЭтотМесяц
							КОНЕЦ
					ИНАЧЕ НачисленияВсе.СуммаПредыдущийМесяц
				КОНЕЦ
		ИНАЧЕ НачисленияСвернуто.Оклад
	КОНЕЦ КАК Разница
