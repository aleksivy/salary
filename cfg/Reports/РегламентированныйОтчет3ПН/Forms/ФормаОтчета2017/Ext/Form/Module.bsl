Процедура СинхронизацияРазделов1и2(ПересчитыватьКоличествоСтраниц = Истина)
	
	КолДополнений = 0;
	
	// устанавливаем значения названия профессии, количества вакансий в разделе 2 синхронно с разделом 1
	ТаблицаРаздела1 = мСтруктураМногострочныхРазделов[мИдГруппы1];
	КоличествоСтрок = ТаблицаРаздела1.Количество();
	
	Для НомерСтроки = 1 По КоличествоСтрок Цикл
		
		Руководитель = мОтчетОВакансиях.Области["РУКОВОДИТЕЛЬ"].Значение;
		КоличествоВакансий = мОтчетОВакансиях.Области["R" + Формат(НомерСтроки,"ЧЦ=4;ЧВН=0;ЧГ=;") + "G2"].Значение;
		ВыводитьДопРаздел  = мОтчетОВакансиях.Области["R" + Формат(НомерСтроки,"ЧЦ=4;ЧВН=0;ЧГ=;") + "G6"].Значение;
		
		мОтчетОВакансиях.Области["M" + Формат(НомерСтроки,"ЧЦ=4;ЧВН=0;ЧГ=;") + "G2"].Значение  = КоличествоВакансий;
		мОтчетОВакансиях.Области["M" + Формат(НомерСтроки,"ЧЦ=4;ЧВН=0;ЧГ=;") + "G15"].Значение = Руководитель;
		
		Если ВыводитьДопРаздел Тогда
			КолДополнений = КолДополнений + 1;
		КонецЕсли;
		
		// Устанавливаем видимость строк раздела 2, в зависимости от того стоит ли "флажок" в колонке 5 раздела 1
		ОбластьРаздела2 = мОтчетОВакансиях.Области["M" + Формат(НомерСтроки,"ЧЦ=4;ЧВН=0;ЧГ=;") + "G_"]; //по высоте соответствует области
		
		мОтчетОВакансиях.Область(ОбластьРаздела2.Верх, ,ОбластьРаздела2.Низ, ).Видимость = ВыводитьДопРаздел;
		
	КонецЦикла;
	
	// Устанаволиваем количество строк дополнения в зависимости от количество установленных "флажков" в колонке 5 раздела 1
	Если ПересчитыватьКоличествоСтраниц Тогда
		мОтчетОВакансиях.Области.КолДополнений.Значение = КолДополнений;
	КонецЕсли;
	
	
