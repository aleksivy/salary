	ОбновитьСтруктуруМногострочныхРазделов();
	
	ВысотаОтчета = мОтчетОВакансиях.Области["ПредупреждениеОПечати"].Верх - 2;
	
	ПечатнаяФорма = Новый ТабличныйДокумент();
	
	Для Сч = 1 По ВысотаОтчета Цикл
		
		Если НЕ мОтчетОВакансиях.Область(Сч,0,Сч,0).Видимость Тогда
			Продолжить;
		КонецЕсли;
		
		ПечатнаяФорма.Вывести(мОтчетОВакансиях.ПолучитьОбласть(Сч,0,Сч,0));		
		
	КонецЦикла;
	
	РазбитьПечатнуюФорму(ПечатнаяФорма);
	
