		ПустойСписок.Добавить(ОбщегоНазначения.ПустоеЗначениеТипа(ТипСписка));
	КонецЦикла;
	Запрос.УстановитьПараметр("ПустойСписок", ПустойСписок);
	
	Элемент.СписокВыбора.Очистить();
