		Если НЕ ЭтоНовый() Тогда
			Заголовок = Строка(СтатусПисьма) + ", " + ?(НеРассмотрено, НСтр("ru='Не рассмотрено, ';uk='Не розглянуто, '"), НСтр("ru='Рассмотрено, ';uk='Розглянуто, '"));
		Иначе
			Заголовок = ?(НеРассмотрено, НСтр("ru='Не рассмотрено, ';uk='Не розглянуто, '"), НСтр("ru='Рассмотрено, ';uk='Розглянуто, '"));
		КонецЕсли; 
		Заголовок = Заголовок + " (" + ?(ВидТекстаПисьма = Перечисления.ВидыТекстовЭлектронныхПисем.HTMLСКартинками, Перечисления.ВидыТекстовЭлектронныхПисем.HTML, ВидТекстаПисьма) + ")";
	КонецЕсли;
	
	Заголовок = Заголовок + ", " + КодировкаПисьма;

КонецПроцедуры

// Процедура инициирует поиск/добавление объектов по имени/адресу эл.почты.
//
// Параметры
//  ВыделенныйТекст - Строка, текст для поиска.
// 
