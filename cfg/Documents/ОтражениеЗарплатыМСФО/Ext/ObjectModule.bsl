Процедура АвтозаполнениеСубконто(ДанныеУчета, СтрокаДанных, тДтКт, тВидСубконто, тРеквизит = "")
	
	Если тРеквизит = "" Тогда
	
		Если тВидСубконто = "Сотрудники" Тогда
			тРеквизит = "ФизЛицо";
		ИначеЕсли тВидСубконто = "Подразделения" Тогда
			тРеквизит = "ПодразделениеОрганизации";//"ПодразделениеОрганизации"
		ИначеЕсли тВидСубконто = "Налоги" Тогда
			тРеквизит = "Налог";
		ИначеЕсли тВидСубконто = "СтатьиНалоговыхДеклараций" Тогда
			тРеквизит = "СтатьяНалоговойДекларации";
		ИначеЕсли тВидСубконто = "ИсполнительныеДокументы" Тогда
			тРеквизит = "ИсполнительныеДокументы";
		ИначеЕсли тВидСубконто = "Контрагенты" Тогда
			тРеквизит = "Контрагент";	
		ИначеЕсли тВидСубконто = "СтатьяЗатрат" Тогда
			тРеквизит = "СтатьяЗатрат";
		КонецЕсли;
		
	КонецЕсли;	
	
	Если ДанныеУчета[ "Счет" + тДтКт ] <> мПустойСчет Тогда
		// если не пустой счет - заполним "автозаполняемые" субконто
		
		тНомерСубконто = "НомерСубконто" + тВидСубконто + тДтКт;
		Попытка
			лЗначение = ДанныеУчета[ тНомерСубконто ];
			Если ДанныеУчета[ тНомерСубконто ] <> 0 И ДанныеУчета[ тНомерСубконто ] <> NULL Тогда
				тСубконто = "Субконто" + тДтКт + ДанныеУчета[ тНомерСубконто ];
				Субконто = ДанныеУчета[ тСубконто ];
				Если НЕ ЗначениеЗаполнено(Субконто) ИЛИ (тРеквизит = "СтатьяЗатрат" И ЗначениеЗаполнено(ДанныеУчета[ тРеквизит ])) Тогда
					Если тРеквизит = "ФизЛицо" Тогда
						СтрокаДанных[ тСубконто ] = ДанныеУчета.Сотрудник.ФизЛицо;
					Иначе	
						СтрокаДанных[ тСубконто ] = ДанныеУчета[ тРеквизит ];
					КонецЕсли;	
				КонецЕсли;
				Если тРеквизит = "СтатьяРасчетовСФСС" И ЗначениеЗаполнено(ДанныеУчета[ тРеквизит ]) Тогда
					СтрокаДанных[ тСубконто ] = ДанныеУчета[ тРеквизит ];
				КонецЕсли;
			КонецЕсли;
		Исключение
			// Ищем субконто другим путем
			Если тРеквизит = "СтатьяЗатрат" Тогда
				лТипСправочника = Тип("СправочникСсылка.СтатьиЗатрат");
				лВидСубконто = ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.СтатьиЗатрат;
			ИначеЕсли тРеквизит = "ПодразделениеОрганизации" Тогда
				лТипСправочника = Тип("СправочникСсылка.ПодразделенияОрганизаций");
				лВидСубконто = ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.Подразделения;
			ИначеЕсли тРеквизит = "ФизЛицо" Тогда
				лТипСправочника = Тип("СправочникСсылка.СотрудникиОрганизаций");
				лВидСубконто = ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.РаботникиОрганизации;
			Иначе
				Сообщить("Не найден реквизит "+тРеквизит);
			КонецЕсли;
			лНужноеЗначение = Неопределено;
			лКолонкиЗапроса = ДанныеУчета.Владелец().Колонки;
			Для каждого лКолонка Из лКолонкиЗапроса Цикл
				Если (ТипЗнч(ДанныеУчета[лКолонка.Имя]) = лТипСправочника) и ЗначениеЗаполнено(ДанныеУчета[лКолонка.Имя]) Тогда
					Если тРеквизит = "ФизЛицо" Тогда
						лНужноеЗначение = ДанныеУчета[лКолонка.Имя].Физлицо;
					Иначе
						лНужноеЗначение = ДанныеУчета[лКолонка.Имя];
					КонецЕсли;
					Прервать;
				КонецЕсли;
			КонецЦикла;
			Если ЗначениеЗаполнено(лНужноеЗначение) Тогда
				лНомерСубконто = СтрокаДанных.СчетДт.ВидыСубконто.Найти(лВидСубконто);
				Если Не (лНомерСубконто = Неопределено) Тогда
					Если Не ЗначениеЗаполнено(СтрокаДанных[ "СубконтоДт"+лНомерСубконто.НомерСтроки ]) Тогда
						СтрокаДанных[ "СубконтоДт"+лНомерСубконто.НомерСтроки ] = лНужноеЗначение;
					КонецЕсли;
				КонецЕсли;
				лНомерСубконто = СтрокаДанных.СчетКт.ВидыСубконто.Найти(лВидСубконто);
				Если Не (лНомерСубконто = Неопределено) Тогда
					Если Не ЗначениеЗаполнено(СтрокаДанных[ "СубконтоКт"+лНомерСубконто.НомерСтроки ]) Тогда
						СтрокаДанных[ "СубконтоКт"+лНомерСубконто.НомерСтроки ] = лНужноеЗначение;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецПопытки;
		
	КонецЕсли;
	
КонецПроцедуры  // АвтозаполнениеСубконто()

