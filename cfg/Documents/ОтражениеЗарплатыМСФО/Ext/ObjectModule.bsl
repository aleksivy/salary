Процедура ОбработкаПроведения(Отказ, Режим)
	
	Если Дата < ПроведениеРасчетов.ДатаВводаНПНК() Тогда	
		Если НЕ УправлениеПользователями.ПолучитьЗначениеПоУмолчанию(глЗначениеПеременной("глТекущийПользователь"), "ОтражениеЗарплатыДо01042011") Тогда
			Сообщить("Запрещено проведение документов отражения за период до "+Формат(ПроведениеРасчетов.ДатаВводаНПНК(),"ДФ=dd.MM.yyyy")+" г.!",СтатусСообщения.ОченьВажное);
			Отказ = Истина;
			Возврат;
		КонецЕсли;
	КонецЕсли;	
	
	// Сформируем структуру реквизитов шапки документа
	СтруктураШапкиДокумента = ОбщегоНазначения.СформироватьСтруктуруШапкиДокумента(ЭтотОбъект);
	
	// Заголовок для сообщений об ошибках проведения.
	Заголовок = ОбщегоНазначения.ПредставлениеДокументаПриПроведении(Ссылка);
	
	// Получим данные учетной политики
	ПодготовитьПараметрыУчетнойПолитики(СтруктураШапкиДокумента, Отказ, Заголовок);
	
	// При получении учетной политики произошли ошибки
	Если Отказ Тогда
		Возврат;
	КонецЕсли;
	
	ПроверитьЗаполнениеШапки(Отказ);
	
	Если Отказ Тогда
		Возврат;
	КонецЕсли;
	
	лНаборЗаписей = РегистрыБухгалтерии.Хозрасчетный.СоздатьНаборЗаписей();
	лНаборЗаписей.Отбор.Регистратор.Установить( Ссылка );
	лНаборЗаписей.Прочитать();
	лНаборЗаписей.Очистить();
	лтзПроводки = лНаборЗаписей.Выгрузить();
	Для каждого лСтрока Из ОтражениеВУчете Цикл
		лНоваяПроводка = лтзПроводки.Добавить();
		ЗаполнитьЗначенияСвойств(лНоваяПроводка, лСтрока);
		Для каждого лВидСубконто Из лНоваяПроводка.СчетДт.ВидыСубконто Цикл
			лНоваяПроводка[ "ВидСубконтоДт"+лВидСубконто.НомерСтроки ] = лВидСубконто.ВидСубконто;
		КонецЦикла;
		Для каждого лВидСубконто Из лНоваяПроводка.СчетКт.ВидыСубконто Цикл
			лНоваяПроводка[ "ВидСубконтоКт"+лВидСубконто.НомерСтроки ] = лВидСубконто.ВидСубконто;
		КонецЦикла;
		лНоваяПроводка.ВалютнаяСуммаДт = лСтрока.ВалютнаяСумма;
		лНоваяПроводка.ВалютнаяСуммаКт = лСтрока.ВалютнаяСумма;
		Если лСтрока.СчетДт.НалоговыйУчет Тогда 
			лНоваяПроводка.НалоговоеНазначениеДт = лСтрока.НалоговоеНазначение; 
			Если лСтрока.НалоговоеНазначение = Справочники.НалоговыеНазначенияАктивовИЗатрат.НКУ_ХозДеятельность Тогда
				лНоваяПроводка.СуммаНУДт = лНоваяПроводка.Сумма;
			КонецЕсли;
		КонецЕсли;
		Если лСтрока.СчетКт.НалоговыйУчет Тогда 
			лНоваяПроводка.НалоговоеНазначениеКт = лСтрока.НалоговоеНазначение; 
			Если лСтрока.НалоговоеНазначение = Справочники.НалоговыеНазначенияАктивовИЗатрат.НКУ_ХозДеятельность Тогда
